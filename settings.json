{
    // Editor Settings
    "editor.fontSize": 16,
    "editor.lineHeight": 1.8,
    "editor.fontFamily": "Geist Mono, Hack, Fira Code, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": "'calt', 'liga', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'ss09'",
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.minimap.scale": 2,
    "editor.minimap.size": "fit",
    "editor.minimap.showSlider": "always",
    "editor.minimap.renderCharacters": false,
    "editor.minimap.enabled": false,
    "editor.scrollbar.verticalScrollbarSize": 10,
    "editor.scrollbar.horizontalScrollbarSize": 10,
    "editor.scrollbar.vertical": "visible",
    "editor.scrollbar.horizontal": "visible",
    "editor.cursorStyle": "line-thin",
    "editor.cursorBlinking": "smooth",

    // Terminal Settings
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.lineHeight": 1.8,
    "terminal.integrated.fontFamily": "Geist Mono, Hack, Fira Code, Menlo, Monaco, 'Courier New', monospace",

    // Workbench Settings
    "workbench.iconTheme": "catppuccin-mocha",
    "workbench.editor.wrapTabs": true,
    "workbench.activityBar.location": "hidden",
    "workbench.editor.showTabs": "multiple",
    "workbench.sideBar.location": "right",
    "workbench.layoutControl.enabled": false,
    "workbench.editor.editorActionsLocation": "hidden",
    "workbench.statusBar.visible": false,
    "workbench.colorTheme": "Catppuccin Mocha",

    // Color Customizations
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#DDB6F2",
    },

    // Window Settings
    "window.menuBarVisibility": "toggle",

    // Zen Mode Settings
    "zenMode.hideStatusBar": true,
    "zenMode.hideActivityBar": true,
    "zenMode.hideLineNumbers": false,
    "zenMode.restore": true,
    "zenMode.centerLayout": false,

    // Git Settings
    "git.confirmSync": false,

    // TypeScript Settings
    "typescript.updateImportsOnFileMove.enabled": "always",

    // File Associations
    "files.associations": {
        "*.css": "tailwindcss"
    },

    // Explorer File Nesting Patterns
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, astro.config.js, vite.config.js, snowpack.config.js, webpack.config.js, rollup.config.js, gulpfile.js, .babelrc, .eslintrc, .prettierrc, .stylelintrc, .editorconfig, .browserslistrc, .nvmrc, .env, .env.local, .env.development, .env.test, .env.production, .env.staging, .env.local, .env.development.local, .env.test.local, .env.production.local, .env.staging.local, .env.*.local",
        "*.sqlite": "${capture}.${extname}-*",
        "*.db": "${capture}.${extname}-*",
        "*.sqlite3": "${capture}.${extname}-*",
        "*.db3": "${capture}.${extname}-*",
        "*.sdb": "${capture}.${extname}-*",
        "*.s3db": "${capture}.${extname}-*"
    },

    // Update Settings
    "update.mode": "none"
}
